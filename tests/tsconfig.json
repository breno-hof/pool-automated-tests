{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"features/**/*.ts",
		"step-definitions/**/*.ts",
		"types.ts"
	],
	"exclude": [
		"node_modules"
	]
}